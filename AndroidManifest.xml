        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light">
        <activity
            android:name="com.os.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.os.activity.ArticleActivity">
        </activity>

        <activity
                android:name="com.os.activity.SettingActivity">
        </activity>
        <activity
                android:name="com.os.activity.ReplyArticle">
