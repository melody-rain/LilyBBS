<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <TextView
                android:id="@+id/sa_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:text="回复"
                android:textColor="#08298A"
                android:textSize="15dip" />

        <TextView
                android:id="@+id/sa_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/sa_reply"
                android:textColor="#08298A"
                android:textSize="15dip" />

        <TextView
                android:id="@+id/sa_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:textSize="15dip"
                android:layout_alignBaseline="@+id/sa_author"
                android:textColor="#08298A" />
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:textColor="#08298A"
            android:textSize="15dip"
            android:id="@+id/post_time"/>
    <TextView
            android:id="@+id/sa_content"
            android:autoLink="web"
            android:textColorLink="#08298A"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:textColor="@android:color/background_dark"
            android:textSize="19dip" />

</LinearLayout>